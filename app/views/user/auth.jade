extends ../shared/template

block content
  h1= title
  if !user
    form(method='post', action='/login')
      fieldset#login
        legend Login
        .row
          .small-12.columns
            label Email
            input(name='email', type='email')
        .row
          .small-12.columns
            label Password
            input(name='password', type='password')
        .row
          .small-4.columns
            button.small.radius Login
  else
    h1 booty

